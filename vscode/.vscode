{
  // vimキーバインド全般
  "vim.leader": ",",
  "vim.insertModeKeyBindings": [
    {
      "before": [ "j", "j" ],
      "after": [ "<Esc>" ]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": [ "<leader>", "d" ],
      "after": [],
      "commands": [ ":q" ]
    },
    {
      "before": [ "<leader>", "f" ],
      "after": [],
      "commands": [ { "command": "workbench.action.nextEditor" } ]
    },
    {
      "before": [ "<leader>", "s" ],
      "after": [],
      "commands": [ { "command": "workbench.action.previousEditor" } ]
    },
    {
      "before": [ "<leader>", "g" ],
      "after": [],
      "commands": [ { "command": "editor.action.revealDefinition" } ]
    },
    {
      "before": [ "<leader>", "r" ],
      "after": [],
      "commands": [ { "command": "extension.runSpecLine" } ]
    },
    {
      "before": [ "<leader>", "R" ],
      "after": [],
      "commands": [ { "command": "extension.runLastSpec" } ]
    }
  ],

  // リンター
  "editor.formatOnSave": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": false,
    "source.fixAll.rubocop": false
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "ruby.rubocop.onSave": true,
  "[javascript]": {
    "editor.formatOnSave": true
  },

  // 検索
  "files.exclude": {
    "**/.git": true,
    "node_modules": true
  },

  // rspec
  "ruby.specCommand": "bundle exec spring rspec",
  "rubyTestExplorer.rspecCommand": "bundle exec spring rspec",
  "rubyTestExplorer.testFramework": "rspec",


  // その他
  "editor.minimap.enabled": false,
  "terminal.integrated.copyOnSelection": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
  "window.zoomLevel": -1,
  "editor.tabSize": 2,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  "trailing-spaces.trimOnSave": true
}
